-- CREATE sales_targets TABLE
CREATE TABLE sales_targets (
    target_range_id INT PRIMARY KEY,
    min_sales DECIMAL(10,2),
    max_sales DECIMAL(10,2),
    bonus_percent DECIMAL(5,2)
);

